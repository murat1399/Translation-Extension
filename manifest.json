{
  "manifest_version": 3,
  "name": "MMÖ's Translation Extension",
  "description": "A browser extension for translating selected text using a free translation API. Made by Murat, Meryem and Ömer",
  "version": "1.1",
  "permissions": ["contextMenus", "storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "images/icons/icon16.png",
    "32": "images/icons/icon32.png",
    "48": "images/icons/icon48.png",
    "128": "images/icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup.html"
  }
}
